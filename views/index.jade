					ul.nav.navbar-nav.navbar-left
						li <a href="#">Link</a>
						li.dropdown
							a.dropdown-toggle(href="#", data-toggle="dropdown") Dropdown <b class="caret"></b>
							ul.dropdown-menu
								li <a href="#">Action</a>
